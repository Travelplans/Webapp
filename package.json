{
  "name": "travelplans-fun",
  "version": "1.0.0",
  "description": "A scalable, secure, role-based portal for Travelplans.fun to manage itineraries, customers, and agents, with analytics and document management features.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:emulators": "concurrently \"npm run emulators\" \"npm run dev\"",
    "emulators": "firebase emulators:start",
    "emulators:exec": "firebase emulators:exec",
    "start": "node server.js",
    "build": "vite build",
    "gcp-build": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "node scripts/test-integration.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:functions": "cd functions && npm install && npm run build && cd .. && firebase deploy --only functions",
    "deploy:all": "npm run build && cd functions && npm install && npm run build && cd .. && firebase deploy"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@tanstack/react-query": "^5.90.11",
    "express": "^4.21.2",
    "firebase": "^12.6.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "recharts": "^3.2.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "firebase-tools": "^13.35.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "ts-jest": "^29.4.6",
    "typescript": "^5.5.3",
    "vite": "^6.4.1"
  }
}
